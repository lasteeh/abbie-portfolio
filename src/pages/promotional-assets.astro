---
import MainLayout from "../layouts/MainLayout.astro";
import ImageSpotlight from "../components/ImageSpotlight.astro";

import pa1 from "../assets/promotional-assets/f5156114-9a90-4580-a854-03996b5b6d4e_rw_1200.jpg";
import pa2 from "../assets/promotional-assets/e978c170-d0e5-4f30-8bc3-c0306f9b4e45_rw_1200.png";
import pa3 from "../assets/promotional-assets/c60b1732-2cda-4aaf-be91-362f23be8aae_rw_1920.png";
import pa4 from "../assets/promotional-assets/df2b7167-cdf9-4c8a-af76-0e55cf3ce8a1_rw_1200.jpg";
import pa5 from "../assets/promotional-assets/192fe26f-03b1-4158-bc8b-50ec89230738_rw_1200.jpg";
